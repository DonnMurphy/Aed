<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountView">

    <include
        android:id="@+id/top_toolbar"
        layout="@layout/top_toolbar"></include>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="56dp"
        android:paddingTop="56dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/account_info"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/cryptids_card_background"
            android:layout_gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_gravity="center"
                app:cardCornerRadius="250dp"
                android:layout_marginTop="16dp"

                app:cardBackgroundColor="#ffffff">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ivAccountImage"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/sheep_dab"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvAccountName"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="28dp"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/account_qrCode"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="18dp"

            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="48dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCryptidsCodeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Cryptid's Code"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:textSize="24dp"
                    />
        <androidx.cardview.widget.CardView
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_gravity="center"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="25dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/ivAccountQrCode"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/sheep_dab"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnShareQrCode"
                android:layout_width="match_parent"
                android:text="Share"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvViewAccountSassy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textAlignment="center"
            android:text="A bad friend just looks at this profile... \n A good friend Gives them some cards! \n Go to your deck and be a good friend today!"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/crdAccountTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            app:cardBackgroundColor="@color/colorPrimary"
            >
            <TextView
                android:id="@+id/tvAccountTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:text="Account Info"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_info"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"

        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:padding="8dp"
                >
                <TextView
                    android:id="@+id/tvAccountEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_weight="40"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/account_email_label"/>
                <TextView
                    android:id="@+id/tvAccountEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="60"
                    android:textAlignment="textEnd"
                    android:paddingRight="4dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:padding="8dp"
                >
                <TextView
                    android:id="@+id/tvIsVerifiedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_weight="40"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/account_email_verified_label"/>
                <TextView
                    android:id="@+id/tvIsVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="60"
                    android:textAlignment="textEnd"
                    android:paddingRight="4dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:padding="8dp"
                >
                <TextView
                    android:id="@+id/tvWalletNetworkLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_weight="40"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/account_wallet_network_label"/>
                <TextView
                    android:id="@+id/tvWalletNetwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="60"
                    android:textAlignment="textEnd"
                    android:paddingRight="4dp"
                   />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:padding="8dp"
                >
                <TextView
                    android:id="@+id/tvSmartContractLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_weight="40"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/account_smart_contract_label"/>
                <TextView
                    android:id="@+id/tvSmartContract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="60"
                    android:textAlignment="textEnd"
                    android:paddingRight="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:padding="8dp"
                >
                <TextView
                    android:id="@+id/tvAccountBalanceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_weight="40"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/account_balance_label"/>
                <TextView
                    android:id="@+id/tvAccountBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="60"
                    android:textAlignment="textEnd"
                    android:paddingRight="4dp"
                    />

            </LinearLayout>

        </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp">
        <Button
            android:id="@+id/btnUpdateAccount"
            android:layout_width="match_parent"
            android:text="Update Account Details"
            android:layout_height="wrap_content"

            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnTopUpAccount"
            android:layout_width="match_parent"
            android:text="Top Up Account"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnConfirmSheepTransfer"
            android:layout_width="match_parent"
            android:text="Transfer"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="8dp"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cryptids_menu_background_primary"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>