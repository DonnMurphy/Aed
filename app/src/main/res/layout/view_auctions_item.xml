<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:layout_centerInParent="true"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/auction_info"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ivAuctionCharacter"
                android:layout_width="268dp"
                android:layout_height="135dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:src="@drawable/sheep_dab"></ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cryptids_menu_background_primary"
                android:weightSum="100"
                >
                <TextView
                    android:id="@+id/tvViewAuctionsSheepName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="2dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="50"
                >
                <!--
                <TextView
                    android:id="@+id/tvStartingPriceLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="@string/auction_starting_price_label"/>
                <TextView
                    android:id="@+id/tvStartingPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="left"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    /> -->
                <TextView
                    android:id="@+id/tvViewAuctionsCurrentPriceLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="@string/auction_current_price_label"/>
                <TextView
                    android:id="@+id/tvViewAuctionsCurrentPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="left"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="50"
                >

                <TextView
                    android:id="@+id/tvViewAuctionsTimeRemainingLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="18dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="@string/auction_remaining_time_label"/>

                <TextView
                    android:id="@+id/tvViewAuctionsTimeRemaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    />
            </LinearLayout>
                <!--
                <TextView
                    android:id="@+id/tvEndingPriceLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="18dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="@string/auction_ending_price_label"/>

                <TextView
                    android:id="@+id/tvEndingPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    /> -->
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvRemainingTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="@string/auction_remaining_time_label"/>
                <TextView
                    android:id="@+id/tvRemainingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>