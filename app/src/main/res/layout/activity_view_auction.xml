<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/top_toolbar"
        layout="@layout/top_toolbar"></include>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="56dp"
    android:paddingTop="56dp"
    tools:context=".ViewAuction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:paddingBottom="56dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/ivAuctionSheepDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/sheep_dab"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/sheep_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            app:cardBackgroundColor="@color/colorPrimaryDark"
            >
            <TextView
                android:id="@+id/tvAuctionSheepName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/current_price_info"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorBackground"

            card_view:cardCornerRadius="4dp">

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:id="@+id/tvCurrentPriceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="@string/auction_current_price_label"/> -->
                    <TextView
                        android:id="@+id/tvCurrentPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="32sp"

                        />
                <!--</LinearLayout>


            </LinearLayout>-->
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/crdAuctionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="12dp"

            app:cardBackgroundColor="@color/colorPrimary"
            >
            <TextView
                android:id="@+id/tvAuctionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:text="Account Info"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sheep_info"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:padding="12dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    >
                    <TextView
                        android:id="@+id/tvSellerNameLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_weight="40"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/sheep_owner_name_label"/>
                    <TextView
                        android:id="@+id/tvSellerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_weight="60"
                        android:textAlignment="viewEnd"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    >
                    <TextView
                        android:id="@+id/tvStartingPriceLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_weight="40"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/auction_starting_price_label"/>
                    <TextView
                        android:id="@+id/tvStartingPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_weight="60"

                         android:textAlignment="textEnd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    >
                    <TextView
                        android:id="@+id/tvEndingPriceLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_weight="40"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/auction_ending_price_label"/>
                    <TextView
                        android:id="@+id/tvEndingPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_weight="60"


                        android:textAlignment="textEnd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:id="@+id/llFinalBid"
                    >
                    <TextView
                        android:id="@+id/tvFinalBidLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_weight="40"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/auction_final_bid_label"/>
                    <TextView
                        android:id="@+id/tvFinalBid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_weight="60"
                        android:textAlignment="viewEnd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:id="@+id/llWinner"
                    >
                    <TextView
                        android:id="@+id/tvAuctionWinnerLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_weight="40"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/auction_auction_winner_label"/>
                    <TextView
                        android:id="@+id/tvAuctionWinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_weight="60"
                        android:textAlignment="viewEnd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRemainingTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    >
                    <TextView
                        android:id="@+id/tvRemainingTimeLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_weight="40"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/auction_remaining_time_label"/>
                    <TextView
                        android:id="@+id/tvRemainingTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_weight="60"
                        android:textAlignment="viewEnd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    >
                    <TextView
                        android:id="@+id/tvStartedAtLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_weight="40"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/auction_started_at_label"/>
                    <TextView
                        android:id="@+id/tvStartedAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_weight="60"
                        android:textAlignment="viewEnd"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                >
                <Button
                    android:id="@+id/btnAuctionCancelAuction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:background="@color/colorWarningRed"
                    android:textColor="#ffffff"
                    android:textStyle="bold"

                    android:text="@string/auction_cancel_auction_button_label"/>
                <Button
                    android:id="@+id/btnAuctionBidOnSheep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:background="@color/colorAccent"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:text="@string/auction_post_bid_button_label"/>
            </LinearLayout>
    </LinearLayout>
</ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cryptids_menu_background_primary"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"

        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>